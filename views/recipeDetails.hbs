{{!-- <h2>Recipe Details</h2> --}}

{{!-- <a href="/allRecipes">Go back to overview</a> --}}

<div class="recipe-details-page">

<form action="/shoppingList" method="POST">

    <div class="recipe-details-page-elements">

    {{#with recipe}}

    <h2 >{{title}}</h2>

    <p><img src="{{this.image}}" alt="image"></p> 

    <br>

    <hr>

    <br>
  
  
    <div class="rowrow">

    <div>

    <h3>Ingredients</h3>

    <ul class="each-item">


        {{#each ingredients}}

        <li>

            <input type="text" name="ingredient" value="{{this.quantity}} {{this.measure}} {{this.name}}"> 
    
        </li>

        {{/each}}

    </ul>

    <br>

    <button type="submit" class="add-to-the-list">Add to list</button>

    </div>

    <div class="the-duration">

    <h3>Duration</h3>

    <br>

    <p> {{duration}}  min</p>

    </div>
  
    </div>

    

    <br>
   

    <hr>

    <br>
    

    

    <h3>Here's how to do it:</h3>

    <p> {{description}} </p>
    
    {{/with}}

   
    <br>

    <hr>


    </div>

</form>

</div>

